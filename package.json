{
  "name": "blog",
  "version": "1.0.0",
  "description": "Best blog ever with Next.js",
  "main": "index.js",
  "scripts": {
    "dev": "node server.js",
    "build": "next build",
    "start": "NODE_ENV=production node server.js",
    "css:build": "node-sass --omit-source-map-url assets/sass/styles.scss static/css/styles.css",
    "css:watch": "npm run css:build -- --watch"
  },
  "keywords": [
    "nextjs",
    "reactjs",
    "express",
    "firestore",
    "firebase/auth",
    "firebase/firestore"
  ],
  "author": "MoHo Khaleqi",
  "license": "MIT",
  "homepage": "https://github.com/mohokh67/next.js-best-blog-ever",
  "repository": {
    "type": "git",
    "url": "https://github.com/mohokh67/next.js-best-blog-ever"
  },
  "bugs": {
    "url": "https://github.com/mohokh67/next.js-best-blog-ever/issues"
  },
  "dependencies": {
    "@zeit/next-sass": "^1.0.1",
    "bulma": "^0.8.0",
    "dotenv-webpack": "^1.7.0",
    "express": "^4.17.1",
    "firebase": "^7.7.0",
    "moment": "^2.24.0",
    "next": "^9.2.0",
    "node-sass": "^4.13.1",
    "nprogress": "^0.2.0",
    "re-base": "^4.0.0",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "slugify": "^1.3.6",
    "validator": "^12.1.0"
  },
  "devDependencies": {
    "babel-eslint": "^10.0.3",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.0.10",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  }
}
